<%= render 'admin/shared/heading', name: 'კრებულები' %>

<main>
  <div class="mx-auto max-w-screen-2xl sm:px-6 lg:px-8">
    <% crumbs = [] %>
    <% if @group %>
      <% crumbs << { name: 'ქვეკორპუსები', url: admin_supergroups_path } %>
      <% crumbs << { name: @group.supergroup.name_ka, url: admin_groups_path(supergroup_id: @group.supergroup.id) } %>
      <% crumbs << { name: @group.name_ka, url: admin_collections_path(group_id: @group.id) } %>
    <% end %>
    <% crumbs << { name: 'კრებულები', url: admin_collections_path(group_id: @group&.id) } %>

    <%= render 'admin/shared/breadcrumbs', crumbs: crumbs %>

    <%= render 'admin/shared/new_button', name: 'ახალი კრებულის დამატება', url: new_admin_collection_path(group_id: @group&.id) %>

    <%= render 'admin/shared/paging', records: @collections, url_method: -> (**params){ admin_collections_path(**params) }, paging_params: { group_id: @group&.id } %>
    <div class="px-4 sm:px-6 lg:px-8">
      <div class="flow-root">
        <div class="-mx-4 -my-2 sm:-mx-6 lg:-mx-8">
          <div class="inline-block min-w-full py-2 align-middle">
            <%= form_for @search, url: admin_collections_path, method: :get do |form| %>
              <table class="w-full border-separate border-spacing-0">
                <thead>
                  <%= render 'admin/shared/table/header',
                             columns: [{ name: 'UID' },
                                       { name: 'ქვეკორპუსი', classes: 'max-w-[240px]' },
                                       { name: 'ჯგუფი', classes: 'max-w-[240px]' },
                                       { name: 'დასახელება ქართულად', classes: 'max-w-[240px]' },
                                       { name: 'დასახელება ინგლისურად', classes: 'max-w-[240px]' },
                                       { name: 'სტატუსი' },
                                       { name: 'წყვილები' },
                                       { name: '' }] %>

                  <%= render 'admin/shared/table/filter',
                            form: form,
                            columns: [{ name: :id, classes: 'max-w-[60px]', input_type: :text_field, input_classes: 'px-2' },
                                      { name: :supergroup_name_ka, classes: 'max-w-[240px]', input_type: :text_field },
                                      { name: :group_name_ka, classes: 'max-w-[240px]', input_type: :text_field },
                                      { name: :group_id, input_type: :hidden },
                                      { name: :name_ka, classes: 'max-w-[240px]', input_type: :text_field },
                                      { name: :name_en, classes: 'max-w-[240px]', input_type: :text_field },
                                      { name: :status, input_type: :status_select, model: Group },
                                      { content: @text_blocks_count, classes: 'py-3.5' },
                                      { input_type: :submit, classes: 'py-2 text-left text-sm text-gray-500' }] %>
                </thead>
                <tbody>
                  <% @collections.each_with_index do |collection, index| %>
                    <%= render 'admin/shared/table/row',
                               record: collection,
                               index: index,
                               columns: [{ type: :text, name: :id, classes: 'font-medium text-gray-900' },
                                         { type: :link, name: :supergroup_name_ka, url_method: -> (**params){ admin_groups_path(**params) }, url_params: { supergroup_id: collection.supergroup_id }, classes: "max-w-[240px] overflow-hidden text-gray-500" },
                                         { type: :link, name: :group_name_ka, url_method: -> (**params){ admin_collections_path(**params) }, url_params: { group_id: collection.group_id }, classes: "max-w-[240px] overflow-hidden text-gray-500" },
                                         { type: :link, name: :name_ka, url_method: -> (**params){ admin_text_blocks_path(**params) }, url_params: { collection_id: collection.id }, classes: "max-w-[240px] overflow-hidden text-gray-500" },
                                         { type: :link, name: :name_en, url_method: -> (**params){ admin_text_blocks_path(**params) }, url_params: { collection_id: collection.id }, classes: "max-w-[240px] overflow-hidden text-gray-500" },
                                         { type: :text, name: :status, classes: "text-gray-500" },
                                         { type: :text, name: :text_blocks_count, classes: "text-gray-500" },
                                         { type: :link, name: :edit, url_method: -> (**params){ edit_admin_collection_path(**params) }, url_params: { id: collection.id }, classes: "font-medium text-gray-500" }] %>
                  <% end %>
                </tbody>
              </table>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <%= render 'admin/shared/paging', records: @collections, url_method: -> (**params){ admin_collections_path(**params) }, paging_params: { group_id: @group&.id } %>
  </div>
</main>
