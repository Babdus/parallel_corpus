<%= render 'admin/shared/heading', name: 'კრებულის დამატება' %>

<main>
  <div class="mx-auto max-w-screen-2xl sm:px-6 lg:px-8">

    <% crumbs = [] %>
    <% if @group %>
      <% crumbs << { name: 'ქვეკორპუსები', url: admin_supergroups_path } %>
      <% crumbs << { name: @group.supergroup.name_ka, url: admin_groups_path(supergroup_id: @group.supergroup.id) } %>
      <% crumbs << { name: @group.name_ka, url: admin_collections_path(group_id: @group.id) } %>
      <% crumbs << { name: 'ახალი კრებულის დამატება', url: new_admin_collection_path(group_id: @group&.id) } %>
    <% end %>

    <%= render 'admin/shared/breadcrumbs', crumbs: crumbs unless crumbs.empty? %>

    <%= render 'admin/collections/shared/form', url: admin_collections_path, method: :post %>
  </div>
