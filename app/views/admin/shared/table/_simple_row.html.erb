<% if index % 2 == 0 %>
  <tr class="bg-white">
<% else %>
  <tr class="bg-gray-50">
<% end %>
  <% if columns[:uid].present? %>
    <td data-controller="tooltip" data-tooltip-target="cell" data-tooltip-overflow-value="true" class="relative truncate z-0 border-b border-r border-l text-sm font-medium text-gray-900 py-4 px-3">
      <span class="highlightable">
        <%= record.id %>
      </span>
      <%= render 'admin/shared/tooltip', text: record.id, highlightable: true %>
    </td>
  <% end %>

  <% if columns[:name_ka].present? %>
    <td data-controller="tooltip" data-tooltip-target="cell" data-tooltip-overflow-value="true" class="relative truncate z-0 border-b border-r text-sm scrollbar-hide hover:z-10 max-w-[240px] text-gray-500 px-3">
      <span class="highlightable">
        <%= record.name_ka %>
      </span>
      <%= render 'admin/shared/tooltip', text: record.name_ka, highlightable: true %>
    </td>
  <% end %>

  <% if columns[:name_en].present? %>
    <td data-controller="tooltip" data-tooltip-target="cell" data-tooltip-overflow-value="true" class="relative truncate z-0 border-b border-r text-sm scrollbar-hide hover:z-10 max-w-[240px] text-gray-500 px-3">
      <span class="highlightable">
        <%= record.name_en %>
      </span>
      <%= render 'admin/shared/tooltip', text: record.name_en, highlightable: true %>
    </td>
  <% end %>

  <td class="relative whitespace-nowrap overflow-hidden z-0 border-b border-r text-sm font-medium text-gray-500 max-w-[60px] px-2">

    <div class="flex justify-between items-center grid grid-flow-col">

      <% if columns[:edit].present? %>
        <%= link_to columns[:edit_url_method].call(**columns[:edit_url_params]), class: "inline-flex text-gray-700 hover:text-oceanside-500 hover:ring-2 hover:ring-oceanside-500 hover:rounded-3xl px-2 py-2" do %>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="inline w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
          </svg>
        <% end %>
      <% end %>

      <% if columns[:delete].present? && (current_user.admin? || current_user.superadmin?) %>
        <button type="button"
                data-controller="delete-record"
                data-delete-record-url-value="<%= columns[:delete_url_method].call(record) %>"
                data-delete-record-redirect-url-value="<%= columns[:delete_redirect_url_method] %>"
                data-delete-record-modal-title-value="<%= columns[:delete_modal_title] %>"
                data-delete-record-modal-text-value="<%= columns[:delete_modal_text] %>"
                data-action="click->delete-record#submit"
                class="inline-flex text-gray-700 hover:text-oceanside-500 hover:ring-2 hover:ring-oceanside-500 hover:rounded-3xl px-2 py-2">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
          </svg>
        </button>
      <% end %>

    </div>

  </td>
</tr>
